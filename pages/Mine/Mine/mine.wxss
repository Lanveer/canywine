/* pages/Mine/Mine/mine.wxss */
page{
    background:#f1f1f1;
}
.header{
    width: 100%;height: 420rpx;background:#e23738; position: relative;overflow: hidden;text-align: center;
}

.user-icon{
    width: 136rpx;height: 136rpx;border-radius: 50%;
    margin: 100rpx auto 20rpx;
}

.user-icon image{
    width: 100%;height: 100%;border-radius: 50%;
}

.user-name{
    font-size: 30rpx;color: #fff;
}

.mine{
    width: 100%;height: auto;overflow: hidden;
    background: #fff;
}

.list{
  width: 100%;height:90rpx;overflow: hidden;position: relative;
}



.icon{
   width: 38rpx;height: 38rpx;margin: 28rpx 20rpx 28rpx 20rpx; float: left
}

.item{
    width: 666rpx;float: left;
    border-bottom: 1px solid #ebebeb;
    display: flex;flex-direction: row;align-items: center;          vertical-align: middle;
    justify-content: space-between;
}
.item text{
    font-size:30rpx;color: #282828; line-height: 88rpx;
}

.item-arrow{
   width: 18rpx;height: 28rpx; 
   margin: 30rpx 20rpx 30rpx 20rpx; 
}


.footer-info{
    width: 550rpx;height: 224rpx;
    background: #fff;
    position: absolute;
    bottom: 60rpx;left: 50%;margin-left: -275rpx;
}

.erweima{
    width: 134rpx;height: 134rpx;float: left;
    margin: 24rpx 26rpx 24rpx 26rpx;
}
.erweima image{
    width: 100%;height: 100%;
}

.info{
    width: 330rpx;height: 134rpx;float: left;
    display: flex;flex-direction: column;margin-top: 44rpx;
}

.info text{
    font-size:24rpx;color: #282828;
}

.footer-bar{
    clear: both;
    width: 100%;height: 44rpx;color: #fff;background: #e23738;font-size: 24rpx;text-align: center;line-height: 44rpx;
}

.infoView {
    width: 550rpx;
    height: 44rpx;
    font-size: 24rpx;
    line-height: 44rpx;
    text-align: center;
    color: gray;
    margin-top: 10rpx;
}
