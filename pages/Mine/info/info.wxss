page {
  background: #f1f1f1;
}

#info {
  width: 100%;
  height: 1162rpx;
  background: #fff;
  position: absolute;
  top: 0rpx;
  z-index: 995;
}

.info-header {
  width: 100%;
  height: 66rpx;
  background: #e23738;
  text-align: center;
  line-height: 66rpx;
}

.info-header text {
  font-size: 30rpx;
  color: #fff;
}

.form-item {
  width: 710rpx;
  height: auto;
  margin: 0 auto 40rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
}

.form-left {
  font-size: 28rpx;
  color: #282828;
  margin-left: 20rpx;
}

.form-left text {
  color: #e23738;
}

.form-right {
  width: 530rpx;
  float: right;
  margin-right: 22rpx;
  font-size: 28rpx;
}

.form-right input {
  width: 100%;
  height: 68rpx;
  border: 1rpx solid #dedede;
}

.other-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
  font-size: 28rpx;
  color: #282828;
}

.phone-code {
  width: 300rpx !important;
}

.get-code {
  width: 178rpx;
  font-size: 22rpx;
  color: #fff;
  height: 68rpx;
  background: #e23738;
  text-align: center;
  line-height: 68rpx;
}

.get-code-disable {
  width: 178rpx;
  font-size: 22rpx;
  color: #fff;
  height: 68rpx;
  background: darkgray;
  text-align: center;
  line-height: 68rpx;
}

.province {
  width: 182rpx !important;
  height: 68rpx;
}

.area {
  width: 182rpx !important;
  height: 68rpx;
}

.form-down {
  width: 676rpx;
  height: 250rpx;
  background: #fff;
  margin: 20rpx auto 0;
}

