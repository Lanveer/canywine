/* pages/show/show.wxss */
@import "../template/template.wxss";

.container {
  width: 750rpx;
  height: auto;
}

.search-bar {
  width: 750rpx;
  height: 70rpx;
  background: #f1f1f1;
  /*position: relative;
  overflow: hidden;*/
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-input {
  width: 626rpx;
  height: 58rpx;
  border-radius: 30rpx;
  border: 1px solid #d6d6d6;
  background: #fff;
  display: block;
  margin: 14rpx auto;
}

.pl {
  font-family: microsoft yahei;
  font-size: 28rpx;
  color: 908e8e;
  text-align: center;
}

.search-bar image {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 21rpx;
  left: 30%;
}

/*搜索栏*/

.searchView {
  width: 610rpx;
  height: 50rpx;
  border-radius: 40rpx;
  border-color: #e8e8e8;
  border: 2rpx solid #e8e8e8;
  background: white;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.searchContainer {
  width: 280rpx;
  height: 50rpx;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.searchImage {
  width: 44rpx;
  height: 44rpx;
  align-items: center;
  margin-top: -4rpx;
}

.searchTitle {
  font-size: 24rpx;
  color: #888;
  line-height: 50rpx;
}

.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.banner-info {
  width: 80%;
  height: 100rpx;
  position: absolute;
  bottom: 12rpx;
  left: 20rpx;
}

.hotel-name {
  font-feature-settings: 30rpx;
  color: #fff;
}

.hotel-location {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  margin-top: 10rpx;
}

.hotel-location>image {
  width: 20rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.hotel-location>text {
  font-size: 28rpx;
  color: #fff;
}

.info {
  width: 100%;
  height: auto;
  overflow: hidden;
  position: relative;
}

.info-top {
  width: 100%;
  height: 62rpx;
  border-bottom: 1rpx solid #e8e8e8;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
}

.info-text {
  color: #282828;
  padding-left: 20rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}

.dis-tag {
  width: 145rpx;
  height: 40rpx;
  font-size: 22rpx;
  color: #fff;
  background: #4faeff;
  line-height: 40rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 4px;
}

.info-down {
  width: 95%;
  height: auto;
  margin: auto;
  /*padding-left: 20rpx;*/
  margin-bottom: 10rpx;
}

.info-down>text {
  font-size: 28rpx;
  color: #282828;
  margin: auto;
}

/*滑动展位列表*/
.listScrollView {
  width: 750rpx;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*margin-top: 66rpx;*/
  z-index: 1;
}

.scroll {
  height: 64rpx;
  background: #f2f2f2;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}

.btns {
  width: 76rpx;
  height: 64rpx;
  margin-right: 50rpx;
  display: inline-block;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin-left: 7rpx;
}

.separatorLine {
    width: 76rpx;
    height: 4rpx;
    background: #F1F1F1;
    /*margin-top: 8rpx;*/
}

.separatorLineSelected {
    width: 76rpx;
    height: 4rpx;
    background: #E82929;
    /*margin-top: 8rpx;*/
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.btns>text {
  padding-bottom: 1rpx;
}

.active {
  border-bottom: 6rpx solid #e82929;
  color: #e82929;
}

